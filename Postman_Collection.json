{
  "info": {
    "name": "Printing Pro API",
    "description": "API collection for Printing Pro application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"jwt_token\", jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin@uttamprinting.com\",\n  \"password\": \"YOUR_ADMIN_PASSWORD\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Products (Public)",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/products?page=0&size=12",
              "host": ["{{base_url}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "12"
                },
                {
                  "key": "category",
                  "value": "POSTER",
                  "disabled": true
                },
                {
                  "key": "search",
                  "value": "banner",
                  "disabled": true
                },
                {
                  "key": "minPrice",
                  "value": "10",
                  "disabled": true
                },
                {
                  "key": "maxPrice",
                  "value": "100",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Product by ID",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/products/{{product_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "products", "{{product_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Contact",
      "item": [
        {
          "name": "Submit Contact Form",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"+1234567890\",\n  \"message\": \"I'm interested in bulk orders for vinyl banners.\",\n  \"productId\": \"{{product_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/contact",
              "host": ["{{base_url}}"],
              "path": ["api", "contact"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin - Products",
      "item": [
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Premium Vinyl Banner\",\n  \"description\": \"High-quality outdoor vinyl banner perfect for storefronts and events.\",\n  \"category\": \"FLEX_PRINTING\",\n  \"pricePerSqft\": 25.50,\n  \"negotiable\": true,\n  \"images\": [\n    {\n      \"url\": \"/uploads/banner-001.jpg\",\n      \"altText\": \"Vinyl banner sample\",\n      \"ordering\": 0\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/admin/products",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "products"]
            }
          }
        },
        {
          "name": "Update Product",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Product Name\",\n  \"description\": \"Updated description\",\n  \"category\": \"POSTER\",\n  \"pricePerSqft\": 30.00,\n  \"negotiable\": false,\n  \"images\": [\n    {\n      \"url\": \"/uploads/updated-image.jpg\",\n      \"altText\": \"Updated image\",\n      \"ordering\": 0\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/admin/products/{{product_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "products", "{{product_id}}"]
            }
          }
        },
        {
          "name": "Delete Product",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/admin/products/{{product_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "products", "{{product_id}}"]
            }
          }
        },
        {
          "name": "Get Analytics by Category",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/admin/products/analytics/by-category",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "products", "analytics", "by-category"]
            }
          }
        },
        {
          "name": "Get Total Product Count",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/admin/products/analytics/total",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "products", "analytics", "total"]
            }
          }
        }
      ]
    },
    {
      "name": "Media",
      "item": [
        {
          "name": "Upload Image",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/media/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "media", "upload"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8084",
      "type": "string"
    },
    {
      "key": "product_id",
      "value": "uuid-here",
      "type": "string"
    }
  ]
}

